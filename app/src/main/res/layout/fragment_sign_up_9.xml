<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.heechan.membeder.ui.signUp.SignUpViewModel" />

        <variable
            name="currentPage"
            type="int" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/line_signUp9_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/app_padding_hr" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/line_signUp9_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/app_padding_hr" />


            <ImageView
                android:id="@+id/img_signup9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_check_circle"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/next"
                />

            <TextView
                android:id="@+id/txt_signup9_message1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="가입"
                android:textColor="@color/blue500"
                android:textSize="22sp"
                android:textFontWeight="700"

                android:layout_marginTop="24dp"

                app:layout_constraintTop_toBottomOf="@+id/img_signup9"
                app:layout_constraintStart_toStartOf="@id/img_signup9"
                app:layout_constraintEnd_toStartOf="@id/txt_signup9_message2"
                />

            <TextView
                android:id="@+id/txt_signup9_message2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="이"
                android:textSize="22sp"
                android:textFontWeight="700"


                app:layout_constraintTop_toTopOf="@id/txt_signup9_message1"
                app:layout_constraintBottom_toBottomOf="@id/txt_signup9_message1"
                app:layout_constraintStart_toEndOf="@id/txt_signup9_message1"
                app:layout_constraintEnd_toStartOf="@id/txt_signup9_message3"
                />

            <TextView
                android:id="@+id/txt_signup9_message3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="완료"
                android:textColor="@color/blue500"
                android:textSize="22sp"
                android:textFontWeight="700"

                android:layout_marginStart="12dp"

                app:layout_constraintTop_toTopOf="@id/txt_signup9_message1"
                app:layout_constraintBottom_toBottomOf="@id/txt_signup9_message1"
                app:layout_constraintStart_toEndOf="@id/txt_signup9_message2"
                app:layout_constraintEnd_toStartOf="@id/txt_signup9_message4"
                />

            <TextView
                android:id="@+id/txt_signup9_message4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="되었어요!"
                android:textSize="22sp"
                android:textFontWeight="700"

                app:layout_constraintTop_toTopOf="@id/txt_signup9_message1"
                app:layout_constraintBottom_toBottomOf="@id/txt_signup9_message1"
                app:layout_constraintStart_toEndOf="@id/txt_signup9_message3"
                app:layout_constraintEnd_toEndOf="@id/img_signup9"
                />

            <Button
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/app_padding_hr"

                android:text="완료"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/line_signUp9_end"
                app:layout_constraintStart_toStartOf="@id/line_signUp9_start"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>