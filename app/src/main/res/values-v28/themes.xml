<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btn_fill_style" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?attr/btn_fill_textColor</item>
        <item name="android:textFontWeight">600</item>
        <item name="textAllCaps">false</item>

        <item name="android:stateListAnimator">@null</item>

        <item name="android:paddingVertical">16dp</item>

        <item name="android:background">@drawable/sh_square_app_radius</item>
        <item name="android:backgroundTint">?attr/btn_fill_backgroundColor</item>
    </style>

    <style name="edt_style" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/edt_textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">?attr/edt_hintColor</item>
        <item name="android:textFontWeight">600</item>

        <item name="android:background">@drawable/sh_square_app_radius</item>
        <item name="android:backgroundTint">?attr/edt_backgroundColor</item>

        <item name="android:paddingVertical">20dp</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>
</resources>