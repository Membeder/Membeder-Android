<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Membeder" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue500</item>
        <item name="colorPrimaryVariant">@color/blue600</item>
        <item name="colorOnPrimary">@color/black200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red300</item>
        <item name="colorSecondaryVariant">@color/red200</item>
        <item name="colorOnSecondary">@color/black200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        
        <item name="android:windowBackground">@color/white600</item>

        <item name="android:fontFamily">@font/font</item>
        <item name="txtColor">@color/black600</item>
        <item name="android:textColor">?attr/txtColor</item>

        <item name="android:ambientShadowAlpha">0.03</item>
        <!--   그림자의 투명도     -->
        <item name="android:spotShadowAlpha">0.03</item>


        <item name="layout_main_backgroundColor">@color/white600</item>
        <!--    Button Color    -->
        <item name="android:buttonStyle">@style/btn_fill_style</item>

        <item name="btn_fill_textColor">@color/white600</item>
        <item name="btn_fill_backgroundColor">@color/blue500</item>
        <item name="btn_fillActive_textColor">@color/white600</item>
        <item name="btn_fillActive_backgroundColor">@color/blue600</item>

        <item name="btn_sub_textColor">@color/blue500</item>
        <item name="btn_sub_backgroundColor">@color/blue100</item>
        <item name="btn_subActive_textColor">@color/blue500</item>
        <item name="btn_subActive_backgroundColor">@color/blue200</item>

        <item name="btn_unable_backgroundColor">@color/gray400</item>
        <item name="btn_unable_textColor">@color/black200</item>

        <!--    EditText Color    -->
        <item name="editTextStyle">@style/edt_style</item>

        <item name="edt_textColor">@color/black200</item>
        <item name="edt_backgroundColor">@color/white500</item>
        <item name="edt_hintColor">@color/gray300</item>

        <!--    Header Style    -->
        <item name="weight_backgroundColor">@color/white600</item>
        <item name="hd_main_logo">@drawable/ic_logo_header</item>
        <item name="hd_txt_color">@color/black500</item>
        <item name="hd_item_color">#B7B7B7</item>
    </style>

    <style name="cornerSize10Percent">
        <item name="cornerSize">20%</item>
    </style>

    <style name="cornerSizeCircle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="btn_fill_style" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?attr/btn_fill_textColor</item>
        <item name="android:fontWeight">600</item>
        <item name="textAllCaps">false</item>

        <item name="android:stateListAnimator">@null</item>

        <item name="android:paddingVertical">16dp</item>

        <item name="android:background">@drawable/sh_square_app_radius</item>
        <item name="android:backgroundTint">?attr/btn_fill_backgroundColor</item>
    </style>

    <style name="btn_active_style" parent="btn_fill_style">
        <item name="android:textColor">?attr/btn_fillActive_textColor</item>

        <item name="android:backgroundTint">?attr/btn_fillActive_backgroundColor</item>
    </style>

    <style name="btn_sub_style" parent="btn_fill_style">
        <item name="android:textColor">?attr/btn_sub_textColor</item>

        <item name="android:backgroundTint">?attr/btn_sub_backgroundColor</item>
    </style>

    <style name="btn_subActive_style" parent="btn_fill_style">
        <item name="android:textColor">?attr/btn_subActive_textColor</item>

        <item name="android:backgroundTint">?attr/btn_subActive_backgroundColor</item>
    </style>

    <style name="btn_unable_style" parent="btn_fill_style">
        <item name="android:textColor">?attr/btn_unable_textColor</item>

        <item name="android:backgroundTint">?attr/btn_unable_backgroundColor</item>
    </style>

    <style name="edt_style" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/edt_textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">?attr/edt_hintColor</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">600</item>

        <item name="android:background">@drawable/sh_square_app_radius</item>
        <item name="android:backgroundTint">?attr/edt_backgroundColor</item>

        <item name="android:paddingVertical">20dp</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="edt_icon_style" parent="edt_style">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/gray300</item>

        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="chk_style" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/se_chk_custom</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

</resources>