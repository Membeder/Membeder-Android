<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.team.select.TeamSelectActivity">

        <com.heechan.membeder.ui.view.header.NavigationHeader
            android:id="@+id/hd_teamSelect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:navigationTitle="팀 선택"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_teamSelect"
            android:layout_width="0dp"
            android:layout_height="0dp"

            tools:listitem="@layout/row_team_select_list_item"


            app:layout_constraintTop_toBottomOf="@+id/hd_teamSelect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>