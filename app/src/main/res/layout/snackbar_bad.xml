<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/red100"
        app:cardCornerRadius="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <TextView
                android:id="@+id/txt_badSnackBar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="이건 타이틀입니다."
                android:textColor="@color/red300"
                android:textSize="16sp"
                android:textFontWeight="700"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/txt_badSnackBar_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:text="이건 메시지입니다."
                android:textColor="@color/black200"
                android:textSize="14sp"
                android:textFontWeight="500"

                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"

                app:layout_constraintTop_toBottomOf="@id/txt_badSnackBar_title"
                app:layout_constraintEnd_toStartOf="@id/txt_goodSnackBar_actionBtn"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/txt_goodSnackBar_actionBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="액션버튼"
                android:textColor="@color/red300"
                android:textSize="16sp"
                android:textFontWeight="700"

                android:visibility="gone"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>